generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  token     String?
  expiresIn DateTime?
  used      Boolean?
  cpf       String    @unique
  telefone  String
  Report    Report[]
}

model Orgao {
  id            String  @id @default(uuid())
  telefone      String
  email         String  @unique
  cnpj          String  @unique
  governamental Boolean

  types Types[]
}

model Types {
  id      String   @id @default(uuid())
  name    String
  orgao   Orgao    @relation(fields: [orgaoId], references: [id])
  orgaoId String
  Report  Report[]
}

model Localization {
  id        String @id @default(uuid())
  estado    String
  cidade    String
  rua       String
  cep       String
  bairro    String
  latitude  String
  longitude String

  Report Report[]
}

model Report {
  id           String   @id @default(uuid())
  created_at   DateTime @default(now())
  descricao    String
  solucionado  Boolean
  data_solucao DateTime

  user   User   @relation(fields: [userId], references: [id])
  userId String

  tipos  Types  @relation(fields: [tipoId], references: [id])
  tipoId String

  localizacoes  Localization @relation(fields: [localizacaoId], references: [id])
  localizacaoId String

  images Image[]
}

model Image {
  id      String @id @default(uuid())
  path    String
  reports Report @relation(fields: [postId], references: [id])
  postId  String
}
